<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mCardView"
        app:cardElevation="8dp"
        app:cardCornerRadius="20dp"
        android:background="@color/customWhite"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/income_TXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount: "
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/income_amount_TXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/income_TXT"
                android:textColor="@color/black"
                />


            <TextView
                android:id="@+id/rv_type_TXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type: "
                android:layout_marginLeft="40dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/income_amount_TXT"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/rv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/rv_type_TXT"
                android:textColor="@color/black"
                />





            <TextView
                android:id="@+id/income_description_TXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: "
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:layout_below="@+id/income_TXT"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/income_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/income_description_TXT"
                android:layout_below="@+id/income_TXT"
                android:textColor="@color/black"
                />




            <TextView
                android:id="@+id/rv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category: "
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:layout_below="@+id/rv_type_TXT"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/income_description_TXT"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/rv_category_TXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/rv_category"
                android:layout_below="@+id/income_TXT"
                android:textColor="@color/black"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:text="date"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pos"
                android:text=""
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/black"
                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>